---
import { astroI18n, t } from 'astro-i18n';

import Layout from '../layouts/Layout.astro';

console.log(astroI18n.locale);
console.log(astroI18n.t('hello'));

if (astroI18n.locale === 'nl') {
  Astro.cookies.set('locale', 'nl');
  return astroI18n.redirect('/nl');
} else {
  return astroI18n.redirect('/');
}
---

<Layout title="Welcome to Astro.">
  <main>
    <h1>{t('hi')} from {Astro.url.pathname}</h1>
    <p>locale is {astroI18n.locale}</p>
    <a href="/">Home</a>
  </main>
</Layout>
